<!DOCTYPE html>
<html lang="pl">

<head>
    <meta charset="utf-8"/>
    <link rel="stylesheet" href="/styles/basic.css"/>
</head>

<body>
    <%- include ('partials/banner') %>
    <article>
        <div style="display: flex;">
            <form class = "form-left" action="/reglog/reg" method="post">
                <h1>Don't have an account? Register here!</h1>
                <h4>Login</h4>
                <input type="text" name="Login">
                <br>
                <h4>E-mail</h4>
                <input type="email" name="Email">
                <br>
                <h4>Password</h4>
                <input type="password" name="Password">
                <br>
                <h4>Repeat Password</h4>
                <input type="password" name="PasswordRepeat">
                <br>
                <button class="custom-button" type="submit">Register</button>
            </form>            
            <form class = "form-right" action="/reglog/log" method="post">
                <h1>Already an user? Log in here!</h1>
                <h4>E-mail</h4>
                <input type="email" name="Email">
                <br>
                <h4>Password</h4>
                <input type="password" name="Password">
                <br>
                <button class="custom-button" type="submit">Login</button>
            </form>
        </div>
    </article>
</body>

<script>
    const urlParams = new URLSearchParams(window.location.search);
    const error = urlParams.get('error');
    if (error) {
      switch (error) {
        case 'passwords-do-not-match':
          alert('The passwords do not match. Please try again.');
          break;
        case 'registration-failed':
          alert('Registration failed. Please try again later.');
          break;
        case 'combination-not-found':
          alert('Combination of email and password is incorrect. Please try again.');
          break;
        default:
          alert('An unknown error occurred. Please try again later.');
      }
    }
  </script>

</html>